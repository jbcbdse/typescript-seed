{
  "name": "typescript-seed",
  "version": "1.0.0",
  "description": "A seed project for Typescript node applications",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint ./src/**/*.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "watch": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec node -r ts-node/register src/index.ts",
    "watch:debug": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.test.ts' --exec node -r ts-node/register --inspect-brk src/index.ts"
  },
  "author": "Jon Barnett",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@typescript-eslint/eslint-plugin": "^2.22.0",
    "@typescript-eslint/parser": "^2.22.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.19.1",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
}
